<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context" xmlns:p="http://www.springframework.org/schema/p" xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
    		http://www.springframework.org/schema/context/spring-context.xsd">


	<!--this is my first bean  value as attribute-->
	<bean class="com.springcore.Student" name="student1">
		<property name="studentId" value="384"></property>

		<property name="studentName" value="rahul vishwakarma"></property>

		<property name="location" value="mumbai"></property>


	</bean>


	<!--this is my second bean using p schema -->
	<bean class="com.springcore.Student" name="student3" p:studentId="123" p:studentName="shivani singh" p:location="panvel" />
 

</beans>