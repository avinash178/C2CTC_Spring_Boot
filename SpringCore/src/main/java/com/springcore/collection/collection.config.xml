<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context" xmlns:p="http://www.springframework.org/schema/p" xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
    		http://www.springframework.org/schema/context/spring-context.xsd">


	<bean class="com.springcore.collection.Client" name="client1">

		<property name="name" value="avinash" />

		<property name="phones">
			<!-- list collection  -->
			<list>

				<value>123456789</value>

				<value>322143435</value>

				<value>3235563454</value>

			</list>
		</property>

		<property name="address">

			<set>
				<!-- set collection-->

				<value>delhi</value>
				<value>mumbai</value>
				<value>kolkata</value>

			</set>

		</property>

		<property name="courses">


			<map>
				<!-- map collection-->

				<entry key="python" value="2 months" />
				<entry key="java" value="5 months" />
				<entry key="c" value="3 months" />

			</map>

		</property>

	</bean>
</beans>